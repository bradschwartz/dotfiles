# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = bradschwartz
	email = baschwartz95@gmail.com
[includeIf "gitdir:~/code/embarktrucks/"]
	path = ~/.gitconfig.work
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green
	changed = yellow
	untracked = red
[url "git@github.com:"]
	insteadOf = https://github.com/
[core]
	excludesfile = ~/.config/git/ignore
[pull]
	rebase = false
[init]
	defaultBranch = main
[alias]
	fix = "commit --amend --no-edit"
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

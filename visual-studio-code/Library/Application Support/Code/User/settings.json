{
    "search.collapseResults": "alwaysCollapse",
    "explorer.openEditors.visible": 0,
    "explorer.confirmDelete": false,
    "workbench.editor.tabSizing": "shrink",
    "files.associations": {
        "Brewfile": "ruby"
    },
    "editor.scrollBeyondLastLine": false,
    "editor.formatOnSave": false,
    "go.lintOnSave": "file",
    "go.lintTool": "golint",
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never"
        }
    },
    "go.formatTool": "default",
    "go.useLanguageServer": true,
    "workbench.settings.editor": "json",
    "explorer.confirmDragAndDrop": false,
    "window.autoDetectColorScheme": false,
    "workbench.preferredDarkColorTheme": "Default Dark+",
    "workbench.preferredHighContrastColorTheme": "Default Light+",
    "window.autoDetectHighContrast": false,
    "editor.rulers": [
        80,
        120,
    ],
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[shellscript]": {
        "files.eol": "auto",
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[ruby]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "window.title": "${rootName}${separator}${activeFolderMedium}/${activeEditorShort}",
    "redhat.telemetry.enabled": true,
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.startupEditor": "none",
    "go.toolsManagement.autoUpdate": true,
    "terraform.languageServer.enable": true,
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[python]": {
        "editor.formatOnType": false
    },
    "workbench.colorTheme": "Default Light+",
    "workbench.editor.pinnedTabSizing": "shrink",
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "editor.inlineSuggest.suppressSuggestions": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "update.showReleaseNotes": false,
    // handles gitlab yaml !reference blocks: https://docs.gitlab.com/ee/ci/yaml/yaml_optimization.html#configure-your-ide-to-support-reference-tags
    "yaml.customTags": [
        "!reference sequence"
    ],
    "editor.minimap.enabled": false,
    "mirrord.autoUpdate": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    }
}